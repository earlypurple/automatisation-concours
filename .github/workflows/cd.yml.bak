name: Continuous Deployment

on:
  push:
    branches: [ main ]

jobs:
  build-and-push-images:
    runs-on: ubuntu-latest
    needs: [backend-ci, frontend-ci] # This is pseudo-code, in a real scenario you would have a status check
    if: github.ref == 'refs/heads/main'

    steps:
    - name: Check out the repo
      uses: actions/checkout@v3

    - name: Log in to GitHub Container Registry
      uses: docker/login-action@v2
      with:
        registry: ghcr.io
        username: ${{ github.actor }}
        password: ${{ secrets.GITHUB_TOKEN }}

    - name: Build and push app image
      uses: docker/build-push-action@v4
      with:
        context: .
        file: ./Dockerfile
        push: true
        tags: ghcr.io/${{ github.repository_owner }}/surveillance-app:${{ github.sha }}

    - name: Build and push scraper image
      uses: docker/build-push-action@v4
      with:
        context: .
        file: ./scraper.Dockerfile
        push: true
        tags: ghcr.io/${{ github.repository_owner }}/surveillance-scraper:${{ github.sha }}
