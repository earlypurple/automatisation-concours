{
    "scraping": {
        "interval_minutes": 60,
        "start_time": "09:00",
        "max_threads": 10,
        "timeout": 30
    },
    "server": {
        "port": 8080,
        "host": "localhost",
        "enable_api": true,
        "cors_enabled": true
    },
    "notifications": {
        "desktop": true,
        "browser": true,
        "min_priority": 4
    },
    "filters": {
        "min_value": 10,
        "categories": ["echantillons", "concours", "cashback", "tests"],
        "excluded_domains": []
    },
    "auto__participation": {
        "enabled": true,
        "max_per_day": 50,
        "safe_mode": true
    },
    "puppeteer": {
        "headless": true,
        "log_level": "info"
    },
    "proxies": {
        "enabled": false,
        "rotation_mode": "random",
        "list": [
            {
                "server": "http://proxy1.example.com:8080",
                "username": "user1",
                "password": "password1"
            },
            {
                "server": "http://proxy2.example.com:8080"
            }
        ]
    },
    "captcha_solver": {
        "enabled": false,
        "api_key": "",
        "provider": "2captcha"
    },
    "email_handler": {
        "enabled": false,
        "host": "imap.example.com",
        "user": "user@example.com",
        "password": "password",
        "check_interval_minutes": 15
    },
    "export": {
        "auto_backup": true,
        "backup_interval_hours": 24,
        "formats": ["json", "csv"]
    }
}
